<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.chart.PieChart?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.cpms.cpms.ui.AdminDashboardController">
    <top>
        <VBox spacing="10" style="-fx-background-color: #1A3D7C;" alignment="CENTER">
            <Label text="Admin Dashboard" style="-fx-font-size: 20px; -fx-text-fill: white;"/>
            <Button fx:id="btnManageUsers" text="Manage Users" style="-fx-font-size: 14px;"/>
            <Button fx:id="btnManageProjects" text="Manage Projects" style="-fx-font-size: 14px;"/>
            <Button fx:id="btnViewReports" text="View Financial Reports" style="-fx-font-size: 14px;"/>
        </VBox>
    </top>
    <center>
        <PieChart fx:id="projectPieChart"/>
    </center>
</BorderPane>