<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.cpms.cpms.ui.AdminDashboardController">
    <top>
        <VBox spacing="10" style="-fx-background-color: #1A3D7C;" alignment="CENTER">
            <Label text="Admin Dashboard" style="-fx-font-size: 20px; -fx-text-fill: white;"/>
        </VBox>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Button fx:id="clientButton" text="Go to Client Dashboard" onAction="#goToClientDashboard"/>
            <Button fx:id="contractorButton" text="Go to Contractor Dashboard" onAction="#goToContractorDashboard"/>
            <Button fx:id="loginButton" text="Logout to Login" onAction="#goToLoginScreen"/>
        </VBox>
    </center>
</BorderPane>
